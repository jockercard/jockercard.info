{
  "rewrites": [
    { "source": "/check-balance", "destination": "/check-balance/index.html" },
    { "source": "/check-balance/", "destination": "/check-balance/index.html" },
    { "source": "/((?!api|check-balance|_next|favicon|robots|sitemap).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}
